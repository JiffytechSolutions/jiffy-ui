{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "declaration": true,
    "declarationDir": "ounce-demo/src/dist",
    "module": "es6",
    "noImplicitAny": true,
    "outDir": "ounce-demo/src/dist",
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "strictNullChecks": true,
    "noEmit": true,
    "jsx": "react"
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "build",
    "ounce-demo/src/dist",
    "ounce-demo",
    "rollup.config.js"
  ]
}